<h1 class="my-5 text-center text-warning">Write your post</h1>
<p>Find me in app/views/posts/new.html.erb</p>
<div class="col-md-6 mx-auto">
   <%= form_for(@post) do |f| %>
      <%= render "devise/shared/error_messages", resource: @post %>
      <div class="form-group">
        <%= f.text_area :content, class:"form-control" %><br />
      </div>
      <div>
        <%= f.submit 'Add Post', class:"btn btn-success col-md-3"%>
      </div>
  <% end %>
</div> 