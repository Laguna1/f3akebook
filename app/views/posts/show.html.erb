<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>
<p><%= @post.user.fname %> <%= @post.user.lname %> * * * <%= @post.content %></p>
<%= render 'comments/form', object: @post%>
<p><%@post.comments.each do |c|%>
    <%= c.user.fname %>
    <%= c.user.lname%> 
    <br>
    <%= c.content %> 
    <% if current_user.id == c.user_id%>
      <%= link_to  "Delete comment", comment_path(c), method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
    <br><br>
<%end%>
</p>
<p>
      <%= link_to 'Delete Post', post_path(@post), method: :delete, data: { confirm: "You sure?" } %>
        <i class="fas fa-trash hover-red"></i>
      
</p>