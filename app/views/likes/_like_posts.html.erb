<%= link_to post_likes_path(object), class: "text-light", method: :post do %>
  <% if liked?(object, 'post') %>
      <button class="btn btn-warning"><i class="fas fa-thumbs-down"></i></button>
    <% else %>
      <button class="btn btn-primary"><i class="fas fa-thumbs-up"></i></button>
  <% end %>
<% end %>
<%= object.likes.count %>