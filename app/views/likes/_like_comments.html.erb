<%= link_to comment_likes_path(object), class: "text-light", method: :post do %>
  <% if liked?(subject = object, type = 'comment') %>
      <button class="btn btn-warning"><i class="fas fa-thumbs-down"></i></button>
    <% else %>
      <button class="btn btn-primary"><i class="fas fa-thumbs-up"></button>
  <% end %>
<% end %>
<%= object.likes.count %>
